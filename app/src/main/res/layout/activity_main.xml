<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginLeft="280dp"
        android:background="#F6EEEE"
        android:gravity="right"
        android:isScrollContainer="false"
        android:shadowColor="?android:attr/colorEdgeEffect"
        android:text="@string/folder"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F2F3EFEF"
        android:textColorHighlight="#EBE5F3"
        android:textColorHint="#F3F0F0"
        android:textColorLink="#F8F5F5"
        android:textSize="18sp"
        app:backgroundTint="#050202"
        app:iconTint="#FAF3F3"
        app:rippleColor="@color/white"
        app:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/btnMP3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MP3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RcView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" />

</LinearLayout>